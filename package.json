{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap --no-ci && lerna run build",
    "build": "lerna run build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "eslint": "eslint '**/*.js'",
    "prettier": "prettier '**/*.js' '**/*.md' '**/*.ts' --write",
    "release": "lerna publish",
    "clean": "lerna run clean && lerna clean && rimraf ./node_modules"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@testing-library/dom": "^6.11.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^1.1.0",
    "@testing-library/user-event": "^7.1.2",
    "@types/node": "^12.12.21",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "coveralls": "^3.0.4",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "keycloak-js": "^9.0.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.0.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.25.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.10.0",
    "rollup-plugin-terser": "^5.0.0",
    "typescript": "3.7.3"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@react-keycloak/core": "file:packages/core",
    "@react-keycloak/nextjs": "file:packages/nextjs",
    "@react-keycloak/razzle": "file:packages/razzle",
    "@react-keycloak/web": "file:packages/web",
    "gatsby-starter-default": "file:examples/gatsbyjs",
    "nextjs-app": "file:examples/nextjs-app",
    "razzle-app": "file:examples/razzle-app",
    "react-navi": "file:examples/react-navi",
    "react-router": "file:examples/react-router"
  }
}
